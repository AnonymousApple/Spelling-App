<h1>Words</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Text</th>
      <th>List</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.text %></td>
        <td><%= word.list.contents %></td>
        <td><%= link_to 'Show', word, class: 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_word_path(word), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Delete', word, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Word', new_word_path %>
